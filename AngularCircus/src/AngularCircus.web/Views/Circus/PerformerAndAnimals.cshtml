<div class="row" ng-cloak ng-controller="PerformerController as prc">
    <script src="~/js/controllers/PerformerController.js"></script>
    <div class="col-sm-4 col-sm-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">

                <h3 class="panel-title"> Performer  |   Gender</h3>
            </div>

            <ol class="list-group">

                <li class="list-group-item clearfix" ng-repeat="performer in prc.Performer">
                    <div class="col-sm-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" ng-model="performer.IsDone" ng-true-value="true" ng-false-value="false" />
                                {{performer.name}} | {{performer.gender}}
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-danger" ng-click="prc.Remove(performer)"> Remove</button>
                    </div>
                </li>

                <li class="list-group-item clearfix" ng-init="performer = {}">
                    <div class="col-sm-8">
                        <label> New Performer</label>
                        <div class="form-group clearfix">
                            <input type="text" class="form-control" placeholder="Name" ng-model="performer.name" />
                            <input type="text" class="form-control clearfix" placeholder="Sex" ng-model="performer.gender" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-primary" ng-click="prc.Add(performer)" ng-keydown="$event.which === 13 && prc.Add(performer)">Add</button>
                    </div>
                </li>
            </ol>
        </div>
    </div>
</div>

<div class="row" ng-cloak ng-controller="AnimalController as anc">
    <script src="~/js/controllers/PerformerController.js"></script>
    <div class="col-sm-4 col-sm-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">

                <h3 class="panel-title"> Animal  |   Name </h3>
            </div>

            <ol class="list-group">

                <li class="list-group-item clearfix" ng-repeat="animal in anc.Animal">
                    <div class="col-sm-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" ng-model="animal.IsDone" ng-true-value="true" ng-false-value="false" />
                                {{animal.species}} | {{animal.name}}
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-danger" ng-click="anc.Remove(animal)"> Remove</button>
                    </div>
                </li>

                <li class="list-group-item clearfix" ng-init="animal = {}">
                    <div class="col-sm-8">
                        <label> New Animal</label>
                        <div class="form-group clearfix">
                            <input type="text" class="form-control" placeholder="Species" ng-model="animal.species" />
                            <input type="text" class="form-control clearfix" placeholder="Name" ng-model="animal.name" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-primary" ng-click="anc.Add(animal)" ng-keydown="$event.which === 13 && anc.Add(animal)">Add</button>
                    </div>
                </li>
            </ol>
        </div>
    </div>
</div>