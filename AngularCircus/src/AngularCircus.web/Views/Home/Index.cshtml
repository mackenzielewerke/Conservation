@{
    ViewData["Title"] = "Home Page";
}
<div class="row" ng-cloak ng-controller="CircusController as crc">
    <div class="col-sm-6 col-sm-3">
        <script src="~/js/controllers/CircusController.js"> </script>
        <div class="panel panel-default">
            <div class="panel-heading">

                <h3 class="panel-title"> Circus</h3>
            </div>
            <ol class="list-group">

                <li class="list-group-item clearfix" ng-repeat="circus in crc.Circus">
                    <div class="col-sm-8">
                        <div class="checkbox">

                            <label>
                                <input type="checkbox" ng-model="circus.isDone" ng-true-value="true" ng-false-value="false" />
                                {{circus.name}}
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-danger" ng-click="crc.Remove(circus)"> Remove</button>
                    </div>
                </li>

                <li class="list-group-item clearfix" ng-init="circus = {}">
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="Name" ng-model="circus.name" />
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-primary" ng-click="crc.Add(circus)" ng-keydown="$event.which === 13 && crc.Add(circus)">Add</button>
                    </div>
                </li>
            </ol>
        </div>
    </div>
</div>

<div class="row" ng-cloak ng-controller="PerformerController as prc">

    <div class="col-sm-6 col-sm-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Performer  |   Gender</h3>
            </div>
            <ol class="list-group">

                <li class="list-group-item clearfix" ng-repeat="performer in prc.Performer">
                    <div class="col-sm-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" ng-model="performer.IsDone" ng-true-value="true" ng-false-value="false" />
                                {{performer.name}} | {{performer.gender}}
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-danger" ng-click="prc.Remove(performer)"> Remove</button>
                    </div>
                </li>
                <li class="list-group-item clearfix" ng-init="performer = {}">
